{
    "diagnostic.enable": false,
    "coc.preferences": {
        "autoRenameImportOnRenameProvider": true,
        "suggest.enablePreview": true,
        "completion.enableSnippet": "always",
        "workspace.autoSave": "afterDelay",
        "signatureHelp.triggerCharacters": [
            "(",
            ","
        ],
        "links.enable": true,
        "semanticHighlight.enable": true,
        "prettier.enable": true
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "*"
    ],
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.snippetSupport": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/19.1.2/clangd_19.1.2/bin/clangd",
    "clangd.arguments": [
        "--background-index"
    ],
    "[c]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "clang-format",
        "editor.tabSize": 6
    },
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "clang-format",
        "editor.tabSize": 6
    },
    "[javascript]": {
        "editor.defaultFormatter": "prettier"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "prettier"
    },
    "[typescript]": {
        "editor.defaultFormatter": "prettier"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "prettier"
    }
}
