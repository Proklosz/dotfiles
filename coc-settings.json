{
  "diagnostic.enable": false,
  "coc.preferences": {
    "autoRenameImportOnRenameProvider": true,
    "suggest.enablePreview": true,
    "completion.enableSnippet": "always",
    "workspace.autoSave": "afterDelay",
    "signatureHelp.triggerCharacters": ["(", ","],
    "links.enable": true,
    "semanticHighlight.enable": true,
    "prettier.enable": true
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "css",
    "scss",
    "markdown",
    "cpp",
    "python",
    "c"
  ],
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.snippetSupport": true,
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": ["--background-index"],
  "[cpp]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "clang-format",
    "editor.tabSize": 4
  }
}
